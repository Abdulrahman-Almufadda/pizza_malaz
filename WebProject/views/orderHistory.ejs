<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <title><%- title %></title>
</head>
<body style="background-color: #f5f0f6; margin-top: 120px ; background-size: cover; ">
    <%- include('./partials/header.ejs') %>
    <div class="container" >
        <div class="row justify-content-center">
            <% if(Orders.length > 0){%>
              <% Orders.forEach(order => {%>
                <% if(user._id == order.userId){ %>
                     <div class="card text-center row-cols-auto p-0 m-5" style="width: 18rem;">
                      <div class="card-header">
                           <h5 class="card-title">ON: <%= order.receiptNumber %></h5>
                      </div>
                      <div class="card-body ">
                        <h6 class="card-text">phone: <%= order.phone %> </h6>
                        <h6 class="card-text">location: <%= order.location %></h6>
                        <h6 class="card-text">total price: <%= order.totalPrice %> </h6>
                        <a href="/yourOrder/<%=order._id%>" class="btn btn-primary">show more</a>
                      </div>
                    </div>
                    <% } %>
                 
             <% }) %> 
             <% }else{ %>
              <h1>no orders yet</h1>
              <% } %>
          </div>
    </div>
    <%- include('./partials/footer.ejs') %>
    </body>
    </html>